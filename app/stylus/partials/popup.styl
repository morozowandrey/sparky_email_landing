.popup {
    visibility: hidden;
    
    height: 100vh;
    width: 100vw;

    position: absolute;
    top: 0;
    z-index: 1;
    
    text-align: center;
    color white
    background-color: rgba(44, 56, 71, 0.2);

    &__close {
        height: 50px;
        width: 50px;
        line-height: 50px;
        
        padding 30px
        position absolute 
        right 0px
        top 0px
        cursor pointer

        &:before,
        &:after {
            transform: rotate(-45deg);
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -5px;
            margin-left: -25px;
            display: block;
            height: 10px;
            width: 50px;
            background-color: #fff;
            transition: all 0.2s ease-out;
        }

        &:after {
            transform: rotate(45deg);
        }

        &:hover {
            &:before,
            &:after {
            transform: rotate(0deg);
            }
        }
    }
    &__video {}
}

.show {
    visibility: visible;
    -webkit-animation: fadeIn 1s;
    animation: fadeIn 1s;
}

@-webkit-keyframes fadeIn {
    from {opacity: 0;} 
    to {opacity: 1;}
}

@keyframes fadeIn {
    from {opacity: 0;}
    to {opacity:1 ;}
}