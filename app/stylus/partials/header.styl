.header {
    width: 100%
    display flex
    justify-content: space-between
    align-items center
    padding-top 39px
    padding-bottom 39px

    &-logo {

        &__image {
            width 147px
            height 38px
            margin-left 45px
        }
    }
    &-nav {
        margin-right 30px

        &__item {
            display inline-block
            font-family: Gilroy-SemiBold
            font-size: 12px
            color: #778698
            line-height: 30px
            text-transform uppercase

            &:first-of-type {
                margin-right 30px
            }
        }
    }
}
@media screen and (max-width 480px){
    .header {
        padding-top: 20px;
        padding-bottom: 20px;
        justify-content: center
    }
    .header-logo__image {
        margin-left: 0px;
    }
    .header-nav {
        display none
    }
}